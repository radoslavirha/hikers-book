{
  "name": "@hikers-book/cli",
  "version": "0.12.0",
  "description": "Hiker's Book CLI",
  "main": "bin/index.js",
  "bin": {
    "hb-cli": "./bin/index.js"
  },
  "scripts": {
    "build": "npx tsc",
    "format": "eslint --ext .ts --fix src",
    "lint": "eslint --ext .ts src",
    "postinstall": "pnpm build || true",
    "cleanup": "rm -rf coverage dist",
    "cleanup:modules": "rm -rf node_modules"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "commander": "^11.1.0",
    "glob": "^10.3.10",
    "json-merger": "^1.1.10",
    "log-symbols": "4.1.0"
  },
  "devDependencies": {
    "@hikers-book/eslint-config": "workspace:*",
    "@types/node": "^20.8.10",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">= 18.0.0",
    "pnpm": ">= 8.7.0"
  },
  "os": [
    "darwin",
    "linux"
  ]
}
