    "@tsed/platform-exceptions": "^7.43.1",
    "@tsed/platform-express": "^7.43.1",
    "@tsed/platform-log-middleware": "^7.43.1",
    "@tsed/platform-middlewares": "^7.43.1",
    "@tsed/platform-params": "^7.43.1",
    "@tsed/platform-response-filter": "^7.43.1",
    "@tsed/platform-views": "^7.43.1",
