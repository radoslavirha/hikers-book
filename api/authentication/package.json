{
  "name": "@hikers-book/authentication-api",
  "version": "0.13.0",
  "description": "Hiker's Book Authentication API",
  "author": "radoslav.irha@gmail.com",
  "license": "MIT",
  "scripts": {
    "bootstrap": "pnpm run config:api && pnpm run keys",
    "build": "pnpm run barrels && tsc --project tsconfig.compile.json",
    "barrels": "barrelsby --config .barrelsby.json",
    "start": "pnpm run copy:views && pnpm run barrels && NODE_ENV=localhost tsnd --inspect --exit-child --cls --ignore-watch node_modules --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "start:prod": "pnpm run copy:views && cross-env NODE_ENV=production node dist/index.js",
    "format": "eslint --ext .ts --fix src",
    "lint": "eslint --ext .ts src",
    "test": "pnpm run config:test && cross-env NODE_ENV=test jest",
    "test:watch": "pnpm run test --watchAll",
    "config:localhost": "hb-cli config node_modules/@hikers-book/config/config/api.authentication.json config/localhost.json -f json || true",
    "config:test": "hb-cli config node_modules/@hikers-book/config/config/api.authentication.template.json config/test.json -f json || true",
    "config:env": "hb-cli config node_modules/@hikers-book/config/environment-variables/api.authentication.json config/custom-environment-variables.json -f json || true",
    "config:clear": "find ./config -name '*.json' -type f -delete",
    "config:api": "pnpm run config:env && pnpm run config:localhost",
    "postinstall": "pnpm run config:api && pnpm run copy:views",
    "cleanup": "rm -rf coverage dist",
    "cleanup:modules": "rm -rf node_modules",
    "keys": "pnpm run keys:access && pnpm run keys:refresh",
    "keys:access": "openssl genrsa -out keys/access.pem 2048 && openssl rsa -in keys/access.pem -outform PEM -pubout -out keys/access.pem.pub",
    "keys:refresh": "openssl genrsa -out keys/refresh.pem 2048 && openssl rsa -in keys/refresh.pem -outform PEM -pubout -out keys/refresh.pem.pub",
    "copy:views": "hb-cli copy-views || true"
  },
